@model List<Dictionary.EntityLayer.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card-header">
        <h3 class="card-title">
            <b>About List</b>
        </h3>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-decoration-none">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Header</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Picture</th>                    
                    <th>Update</th>
                    <th>Delete</th>                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-danger">@item.AboutId</td>
                        <td>@item.Detail</td>
                        <td style="text-align:justify">@item.Description</td>
                        <td>@item.Image</td>
                        <td>@item.Picture</td>
                        <td>
                            <a href="/AboutAdmin/UpdateAbout/@item.AboutId" class="btn btn-outline-primary sm">Update</a>
                        </td>
                        <td>                           
                            <a href="/AboutAdmin/DeleteAbout/@item.AboutId" class="btn btn-outline-danger sm">Delete</a>
                        </td>                       
                    </tr>
                }
            </tbody>
        </table>
        <div style="margin-top:1rem">
            <a href="/AboutAdmin/CreateAbout/" class="btn btn-outline-primary col-md-12">Create New About</a>
        </div>
    </div>
</div>