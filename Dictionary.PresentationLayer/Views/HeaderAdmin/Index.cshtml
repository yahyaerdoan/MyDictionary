@model List<Dictionary.EntityLayer.Concrete.Head>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card-header">
        <h3 class="card-title">
            <b>Header List</b>
        </h3>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-decoration-none">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Header</th>
                    <th>Category Name</th>
                    <th>Created Date</th>
                    <th>Writer First & Last Name</th>
                    <th>Update</th>
                    <th>Delete</th>
                    <th>Headers</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-danger">@item.HeadId</td>
                        <td>@item.Name</td>
                        <td>@item.Category.Name</td>
                        <td>@(((DateTime)item.Date).ToString("dd-MMMM-yyyy"))</td>
                        <td>@item.Writer.FirstName @item.Writer.LastName</td>
                        <td>
                            <a href="/HeaderAdmin/UpdateHeader/@item.HeadId" class="btn btn-outline-primary sm">Update</a>
                        </td>
                        <td>
                            <a href="/HeaderAdmin/DeleteHeader/@item.HeadId" class="btn btn-outline-danger sm">Delete</a>
                        </td>
                        <td>
                            <a href="/ContentAdmin/Index/@item.HeadId" class="btn btn-outline-info sm">Headers</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div style="margin-top:1rem">
            <a href="/HeaderAdmin/CreateHeader/" class="btn btn-outline-primary col-md-12">Create New Header</a>
        </div>
    </div>
</div>