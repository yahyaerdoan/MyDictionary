@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title></title>
    <link rel="stylesheet" href="~/Template/AdminLTE-3.2.0/plugins/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Template/AdminLTE-3.2.0/dist/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <link rel="stylesheet" href="~/Template/AdminLTE-3.2.0/plugins/summernote/summernote-bs4.min.css">
    <link href="~/Content/PagedList.css" rel="stylesheet" />
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <div class="sidebar">
                @Html.Action("IndexPartial", "MySideBar")
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview menu-open">
                            <a href="/MyWriter/Index/" class="nav-link">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Profile
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/MyHeader/AllHeader/" class="nav-link">
                                <i class="nav-icon fas fa-address-book"></i>
                                <p>
                                    All Header
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/MyHeader/Index/" class="nav-link">
                                <i class="nav-icon fas fa-th"></i>
                                <p>
                                    Headers
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/MyContent/Index/" class="nav-link">
                                <i class="nav-icon fas fa-table"></i>
                                <p>
                                    Contents
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/MyMessage/InBox/" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Messages
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Header/HeaderList/" class="nav-link">
                                <i class="nav-icon fas fa-book"></i>
                                <p>
                                    Go web site
                                </p>
                            </a>

                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/MyLogIn/SignOut/" class="nav-link">
                                <i class="nav-icon fas fa-apple-alt"></i>
                                <p>
                                    Sing Out
                                </p>
                            </a>

                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">

                    </div>
                </div>
            </div>
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <footer class="main-footer mt-2">
            <strong>Copyright &copy; 2021-<script>document.write(new Date().getFullYear())</script> Yahya John Erdogan</strong>      
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> Asp.Net Framework Mvc
            </div>
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/Template/AdminLTE-3.2.0/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/Template/AdminLTE-3.2.0/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/Template/AdminLTE-3.2.0/dist/js/adminlte.js"></script>
    
    <script src="~/Template/AdminLTE-3.2.0/dist/js/pages/dashboard3.js"></script>
    <script src="~/Template/AdminLTE-3.2.0/plugins/summernote/summernote-bs4.min.js"></script>
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/ckeditor/adapters/jquery.js"></script>
</body>
</html>