@model List<Dictionary.EntityLayer.Concrete.Content>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{ string color = ""; }
<div class="container-fluid">
    <div class="card-header">
        <h3 class="card-title">
            <b>Content List</b>
        </h3>
    </div>
    <div class="card-body table-responsive p-0">
        <div class="tab-pane" id="timeline">
            <!-- The timeline -->
            <div class="timeline timeline-inverse">
                <!-- timeline time label -->
                @foreach (var item in Model)
                {

                    if (item.ContentId % 2 == 0)
                    {
                        color = "bg-success";
                    }
                    else
                    {
                        color = "bg-fuchsia";
                    }
                    <div class="time-label">
                        <span class="@color">
                            @item.Date.ToString("MMM")
                            @item.Date.ToString("yyyy")
                        </span>
                    </div>                   
                    <div>
                        <i class="fas fa-envelope @color"></i>
                        <div class="timeline-item">
                            <span class="time" style="color:blue"><b><h5>@item.Writer.FirstName @item.Writer.LastName</h5></b></span>

                            <h3 class="timeline-header"><a style="color:blue">@item.Head.Category.Name</a><b> @item.Head.Name</b></h3>
                            <div class="timeline-body">
                                <div class="title"> <b> @item.Writer.Title</b></div>
                                @item.Purview
                            </div>
                            <div class="timeline-footer">
                                <a href="/ContentAdmin/UpdateContent/@item.ContentId" class="btn btn-primary btn-sm">Update</a>
                                <a href="/ContentAdmin/DeleteContent/@item.ContentId" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div style="margin-top:1rem">
            <a href="/ContentAdmin/CreateContent/" class="btn btn-outline-primary col-md-12">Create New Content</a>
        </div>
    </div>
</div>

