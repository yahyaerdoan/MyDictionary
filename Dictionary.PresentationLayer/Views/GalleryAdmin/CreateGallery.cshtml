@model Dictionary.EntityLayer.Concrete.Gallery
@{
    ViewBag.Title = "CreateGallery";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card-header">
        <h3 class="card-title">
            <b>Create Gallery</b>
        </h3>
    </div>
    <div class="card-body">
        <form role="form" method="post" enctype="multipart/form-data" action="/GalleryAdmin/CreateGallery/">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" placeholder="title" name="Title" multiple>
                        @Html.ValidationMessage("Name", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Image</label>
                        <input type="file" class="form-control" placeholder="image" name="Image" >
                        @Html.ValidationMessage("Status", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>Description</label>
                        <textarea type="text" rows="6" class="form-control" placeholder="description" name="Description"></textarea>
                        @Html.ValidationMessage("Description", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <button style="margin-top:0rem" type="submit" class="btn btn-outline-success col-md-12">Create New Gallery</button>
        </form>
    </div>
</div>